<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="AppController.Controller">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label text="Registrar Gasto" />
    <HBox spacing="10">
        <TextField fx:id="txtDescripcion" promptText="Descripción" />
        <TextField fx:id="txtMonto" promptText="Monto" />
        <Button onAction="#agregarGasto" text="Agregar" />
        <Button onAction="#eliminarGastoSeleccionado" text="Eliminar Gasto" />
        <Button onAction="#mostrarTotalGastos" text="Mostrar Total" />
    </HBox>
    <TableView fx:id="tablaGastos" prefHeight="300" prefWidth="400">
        <columns>
            <TableColumn fx:id="colDescripcion" prefWidth="227.0" text="Descripción" />
            <TableColumn fx:id="colMonto" minWidth="8.0" prefWidth="148.0" text="Monto" />
            <TableColumn fx:id="colFecha" prefWidth="202.0" text="Fecha" />
        </columns>
    </TableView>
</VBox>
